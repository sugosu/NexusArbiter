{
  "provider": "openai",

  "runs": [
    {
      "name": "codegen_1",
      "profile_file": "context_files/profiles/code_generation.json",
      "task_description": "Generate module A.",
      "context_file": ["context_files/manifests/manifest_example.json"],
      "target_file": "app/module_A.py",
      "allowed_actions": ["file_write", "continue"]
    },
    {
      "name": "validator_1",
      "profile_file": "context_files/profiles/validator.json",
      "task_description": "Validate module A.",
      "context_file": ["context_files/manifests/manifest_example.json"],
      "allowed_actions": ["trigger_retry", "continue", "break"]
    }
  ]
}
