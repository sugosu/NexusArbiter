{
  "log_io": {
    "enabled": true,
    "log_dir": "logs/io",
    "request_file_pattern": "{run_name}__{attempt}__request.json",
    "response_file_pattern": "{run_name}__{attempt}__response.json"
  },
  "runs": [
    {
      "name": "GameEngine_generator",
      "profile_file": "context_files/profiles/openai/class_generator.json",
      "task_description": "Generate the Python implementation of the BoardManager class as described by the implementation story and manifest.",
      "context_file": [
        "tetris/story_tetris.txt",
        "tetris/manifest/manifest.json"
      ],
      "target_file": "tetris/src/core/board_manager.py",
      "allowed_actions": ["file_write"],
      "retry": 0,
      "agent_input": {}
    },
    {
      "name": "GameEngine_validator",
      "profile_file": "context_files/profiles/openai/class_validator.json",
      "task_description": "Validate the BoardManager class implementation against the implementation story, manifest, and class rules. If issues are found, write a validation report and (optionally) request a rerun of the generator.",
      "context_file": [
        "tetris/story_tetris.txt",
        "tetris/manifest/manifest.json",
        "tetris/src/engine/game_engine.py",
        "context_files/general/class_generation_rules.json"
      ],
      "target_file": "tetris/src/core/board_manager.py",
      "rerun_index": 0,
      "target_run": "GameEngine_generator",
      "rerun_strategy": "context_files/strategies/class_rerun_strategy.json",
      "allowed_actions": ["file_write", "rerun", "continue", "break"],
      "retry": 0,
      "agent_input": {}
    }
  ]
}
