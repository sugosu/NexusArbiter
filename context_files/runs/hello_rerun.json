{
  "log_io": {
    "enabled": true,
    "log_dir": "logs/io",
    "request_file_pattern": "{run_name}__{attempt}__request.json",
    "response_file_pattern": "{run_name}__{attempt}__response.json"
  },

  "retry_policy": {
    "system": {
      "max_attempts": 3,
      "retry_on_status": [429, 500, 502, 503, 504],
      "retry_on_network_errors": true,
      "backoff_seconds": [2, 4, 8]
    }
  },

  "runs": [
    {
      "name": "codegen_hello",
      "profile_file": "context_files/profiles/gemini/gemini_codegen.json",
      "task_description": "Generate a simple hello-world module.",
      "context_file": [],
      "target_file": "app/hello.py",
      "allowed_actions": ["file_write"]
    },
    {
      "name": "validator_hello",
      "profile_file": "context_files/profiles/validator_hello.json",
      "task_description": "Validate hello.py and, if invalid, request a rerun.",
      "context_file": ["app/hello.py"],
      "target_file": null,

      "rerun_index": 0,
      "target_run": "codegen_hello",
      "rerun_strategy": "context_files/strategies/hello_rerun_strategy.json",

      "allowed_actions": ["rerun", "continue", "break"]
    }
  ]
}
