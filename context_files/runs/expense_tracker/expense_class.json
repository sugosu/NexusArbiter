{
  "log_io": {
    "enabled": true,
    "log_dir": "logs/io",
    "request_file_pattern": "{run_name}__{attempt}__request.json",
    "response_file_pattern": "{run_name}__{attempt}__response.json"
  },
  "runs": [
    {
      "name": "ExpenseRepository_generator",
      "profile_file": "context_files/profiles/openai/class_generator.json",
      "task_description": "Generate the Python implementation of the ExpenseRepository class as described by the expense tracker implementation story and manifest.",
      "context_file": [
        "expense_tracker/story_expense_tracker.txt",
        "expense_tracker/manifest/manifest.json"
      ],
      "target_file": "expense_tracker/src/repository.py",
      "allowed_actions": ["file_write"],
      "retry": 0,
      "agent_input": {}
    },
    {
      "name": "ExpenseRepository_validator",
      "profile_file": "context_files/profiles/openai/class_validator.json",
      "task_description": "Validate the ExpenseRepository class implementation against the expense tracker implementation story, manifest, and class generation rules. If issues are found, write a validation report and (optionally) request a rerun of the generator.",
      "context_file": [
        "expense_tracker/story_expense_tracker.txt",
        "expense_tracker/manifest/manifest.json",
        "expense_tracker/src/repository.py",
        "context_files/general/class_generation_rules.json"
      ],
      "target_file": "expense_tracker/manifest/manifest_validation.json",
      "rerun_index": 0,
      "target_run": "ExpenseRepository_generator",
      "rerun_strategy": "context_files/strategies/class_rerun_strategy.json",
      "allowed_actions": ["file_write", "rerun", "continue", "break"],
      "retry": 0,
      "agent_input": {}
    }
  ]
}
