{
  "log_io": {
    "enabled": true,
    "log_dir": "logs/io",
    "request_file_pattern": "{run_name}__{attempt}__request.json",
    "response_file_pattern": "{run_name}__{attempt}__response.json"
  },

  "runs": [
    {
      "name": "manifest_generator",
      "profile_file": "context_files/profiles/openai/manifest_generator.json",
      "task_description": "Generate a complete, manifest.json from given story file. Describing modules, classes, files, dependencies, config parameters, and build instructions.",
      "context_file": [
        "context_files/general/manifest_example.json",
        "expense_tracker/story_expense_tracker.txt"
      ],
      "target_file": "expense_tracker/manifest/manifest.json",
      "allowed_actions": ["file_write"],
      "retry": 0,
      "agent_input": {}
    },

    {
      "name": "manifest_validator",
      "profile_file": "context_files/profiles/openai/manifest_validator.json",
      "task_description": "Validate the generated manifest.json against strict manifest rules. Produce a validation report and, if required, request a rerun of the generation step with refined instructions.",
      "context_file": [
        "expense_tracker/manifest/manifest.json",
        "context_files/general/manifest_example.json",
        "expense_tracker/story_expense_tracker.txt"
      ],
      "target_file": "expense_tracker/manifest/manifest_validation.json",

      "rerun_index": 0,
      "target_run": "manifest_generator",
      "rerun_strategy": "context_files/strategies/manifest_rerun_strategy.json",

      "allowed_actions": ["file_write", "rerun", "continue", "break"],
      "retry": 0,
      "agent_input": {}
    }
  ]
}
