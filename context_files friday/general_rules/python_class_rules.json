{
  "language": "python",
  "version": "3.10+",
  "style": {
    "follow_pep8": true,
    "max_line_length": 100,
    "use_type_hints": true,
    "prefer_dataclasses_for_pure_data": true,
    "naming_conventions": {
      "classes": "PascalCase",
      "methods": "snake_case",
      "functions": "snake_case",
      "variables": "snake_case",
      "constants": "UPPER_SNAKE_CASE"
    }
  },
  "class_contract": {
    "one_public_class_per_file": true,
    "allow_helper_functions": true,
    "allow_nested_classes": false,
    "constructor_policy": {
      "use___init__": true,
      "avoid_heavy_logic_in___init__": true
    },
    "attributes": {
      "must_match_manifest": true,
      "allow_additional_internal_attributes": true,
      "document_non_obvious_attributes": true
    },
    "methods": {
      "must_match_manifest_signatures": true,
      "document_side_effects": true,
      "avoid_long_methods": true,
      "max_parameters_recommended": 5
    }
  },
  "dependencies": {
    "allowed_standard_modules": [
      "dataclasses",
      "typing",
      "enum",
      "time",
      "math",
      "collections"
    ],
    "disallow_network_io": true,
    "disallow_disk_io": true,
    "exceptions": [
      "Logging via the standard logging module is allowed when justified."
    ]
  },
  "error_handling": {
    "use_specific_exceptions": true,
    "avoid_bare_except": true,
    "document_raised_exceptions": true
  },
  "logging": {
    "use_logging_module": true,
    "avoid_print_statements": true
  }
}
